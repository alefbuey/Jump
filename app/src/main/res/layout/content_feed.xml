<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Feed"
    tools:showIn="@layout/app_bar_feed">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/navigation"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.alef.jump.jobItem"
                android:id="@+id/fr_jobItem"
                android:layout_alignParentTop="true"
                class="com.alef.jump.jobItem"
                tools:layout="@layout/fragment_job_item" />

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.alef.jump.jobItem"
                android:id="@+id/fr_jobItem1"
                android:layout_alignParentTop="true"
                class="com.alef.jump.jobItem"
                tools:layout="@layout/fragment_job_item" />
            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.alef.jump.jobItem"
                android:id="@+id/fr_jobItem2"
                android:layout_alignParentTop="true"
                class="com.alef.jump.jobItem"
                tools:layout="@layout/fragment_job_item" />

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>