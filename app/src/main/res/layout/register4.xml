<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/lateral_bar_color">

    <TextView
        android:id="@+id/centerV"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/center_center_v"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/centerV"/>

    <TextView
        android:id="@+id/center_center2_v"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center_center_v"/>

    <TextView
        android:id="@+id/center_centeru_v"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/centerV"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/centerH"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/center_centerR_H"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="@id/centerH"
        app:layout_constraintRight_toRightOf="parent"/>


    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:src="@drawable/ic_man"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/center_centeru_v"/>



    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Choose an email:"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/centerV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/centerH"

            />



        <EditText
            android:id="@+id/etEmail"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_deadline"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="@id/tv_email"
            app:layout_constraintTop_toBottomOf="@id/tv_email"


            />

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:text="Choose an password"
        android:textSize="20dp"
        android:textColor="#FFFF"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintLeft_toLeftOf="@id/tv_email"


        />

        <EditText
            android:id="@+id/etPassword"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:background="@drawable/ic_deadline"
            android:hint="Password"

            android:gravity="center"
            android:inputType="textPassword"

            app:layout_constraintLeft_toLeftOf="@id/tv_email"
            app:layout_constraintTop_toBottomOf="@id/tv_pass"
            />


</android.support.constraint.ConstraintLayout>