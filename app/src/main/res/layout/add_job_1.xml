<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/back_color"
    >

    <TextView
        android:id="@+id/centerV"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/center_center_v"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/centerV"/>

    <TextView
        android:id="@+id/center_center2_v"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center_center_v"/>

    <TextView
        android:id="@+id/center_centeru_v"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/centerV"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/centerH"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/center_centerR_H"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="@id/centerH"
        app:layout_constraintRight_toRightOf="parent"/>



    <ImageView
        android:id="@+id/iv_case"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_case"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/center_centeru_v"/>



    <EditText
        android:id="@+id/et_Title"
        android:hint="title:"
        android:paddingLeft="10dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_deadline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/centerV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>




    <EditText
        android:id="@+id/et_Desc"
        android:hint="description:"
        android:gravity="left"
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/ic_desc"
        app:layout_constraintLeft_toLeftOf="@id/et_Title"
        app:layout_constraintTop_toBottomOf="@id/et_Title"
        app:layout_constraintStart_toStartOf="@id/et_Title"
        app:layout_constraintEnd_toEndOf="@id/et_Title"
        app:layout_constraintBottom_toBottomOf="@id/center_center_v"

        />

    <EditText
        android:id="@+id/et_Mode"
        android:hint="Mode:"
        android:paddingLeft="10dp"
        android:background="@drawable/ic_deadline"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_Desc"
        app:layout_constraintBottom_toBottomOf="@id/center_center2_v"
        app:layout_constraintLeft_toLeftOf="@id/et_Title"/>

    <EditText
        android:id="@+id/et_NumVac"
        android:hint="Num Vac: "
        android:paddingLeft="10dp"
        android:inputType="number"
        android:background="@drawable/ic_deadline"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="@id/et_Desc"
        app:layout_constraintTop_toBottomOf="@id/et_Desc"
        app:layout_constraintBottom_toBottomOf="@id/center_center2_v"/>

</android.support.constraint.ConstraintLayout>
